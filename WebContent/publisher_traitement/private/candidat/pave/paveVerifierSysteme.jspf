			<td>
                Navigateur
            </td>
			<td>
<%
	if(sUserAgentControl.contains("Firefox"))
	{
	    sIconUserAgent = Icone.ICONE_SUCCES;
	    %>Vous utilisez Firefox<%
	} 
	
	
